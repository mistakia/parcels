.selected-parcel
  padding 16px

  &__header
    display flex
    justify-content space-between
    align-items center
    margin-bottom 16px

    &-title
      font-size 1.25rem
      font-weight bold

.parcel-data
  &__item
    margin-left 20px

  &__item
  &__item-list
    border 1px solid #f0f0f0
    padding 8px
    border-radius 4px
    margin-top 8px

  &__label
    margin-top 2px
    font-size 12px
    color rgba(0, 0, 0, 0.87)
    font-weight 600
    text-transform uppercase
    cursor pointer
    display flex
    align-items center
    gap 4px

  &__value
    margin-top 4px
    padding 8px 16px
    background #f0f0f0
    border-radius 4px

  &__arrow
    display inline-block
    transition transform 0.2s

    &--expanded
      transform rotate(90deg)
