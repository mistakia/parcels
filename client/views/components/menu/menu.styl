.menu
  position fixed
  left 0
  top 100px
  background-color white
  padding-left 16px
  z-index 999

  &__list
    list-style none
    padding 0
    margin 0

  &__item
    margin 0
    padding 0

  &__link
    display flex
    align-items center
    padding 12px 16px
    text-decoration none
    color #333
    transition background-color 0.2s

    &hover
      color red

    &--active
      font-weight bold

  &__icon
    margin-right 16px
    font-size 20px

  &__label
    font-size 14px
